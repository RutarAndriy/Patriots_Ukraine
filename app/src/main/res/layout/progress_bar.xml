<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:wheel="http://schemas.android.com/apk/res-auto"
             android:orientation="horizontal"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
    >

    <com.pnikosis.materialishprogress.ProgressWheel
        android:id="@+id/progress_wheel"
        android:layout_width="@dimen/progress_wheel_diameter"
        android:layout_height="@dimen/progress_wheel_diameter"
        wheel:matProg_barColor="?attr/title_bar_background"
        wheel:matProg_barWidth="@dimen/progress_wheel_width"
        wheel:matProg_progressIndeterminate="true"
        wheel:matProg_fillRadius="true"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/progress_wheel_margin"
        android:layout_marginBottom="@dimen/progress_wheel_margin"
        android:layout_marginLeft="@dimen/progress_wheel_margin"
        android:layout_marginRight="@dimen/progress_wheel_margin" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/progress_text"
        android:layout_gravity="center"
        android:textSize="@dimen/text_size_progress_dialog"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginRight="@dimen/progress_wheel_margin"
        android:textColor="?attr/text_color_2"/>

</LinearLayout>